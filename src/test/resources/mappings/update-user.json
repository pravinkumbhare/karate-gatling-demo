{
  "request": {
    "method": "PUT",
    "urlPattern": "/user/.*"
  },
  "response": {
    "status": 200,
    "transformers": ["response-template"],
    "headers": { "Content-Type": "application/json" },
    "body": "{ \"status\": \"User updated successfully\", \"userId\": \"{{request.pathSegments.[1]}}\", \"name\": \"{{jsonPath request.body '$.name'}}\", \"role\": \"{{jsonPath request.body '$.role'}}\" }"
  }
}
