{
  "request": {
    "method": "PUT",
    "urlPattern": "/user/[0-9]+"
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": ["response-template"],
    "body": "{ \"status\": \"User updated successfully\", \"userId\": {{request.path.[1]}}, \"name\": \"{{jsonPath request.body '$.name'}}\", \"role\": \"{{jsonPath request.body '$.role'}}\" }"
  }
}
